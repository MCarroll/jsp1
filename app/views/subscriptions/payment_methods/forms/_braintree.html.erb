<%= form_with url: local_assigns.fetch(:url, subscription_payment_method_path(subscription)),
  method: :post,
  class: "mt-4",
  data: {
    controller: "braintree--dropin",
    braintree__dropin_client_token: Pay.braintree_gateway.client_token.generate,
    braintree__dropin_env: Pay::Braintree.environment,
    braintree__dropin_target: "form",
  } do |f| %>

  <%= tag.div nil, data: { braintree_target: "dropin" } %>

  <%= f.button t(".button"), class: "btn btn-primary", data: { action: "click->braintree#submit", disable_with: t("processing") } %>

  <%= f.hidden_field :processor, value: :braintree %>
<% end %>
